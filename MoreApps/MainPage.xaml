<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MoreApps.MainPage" >

  
    <Shell.TitleView>
        <HorizontalStackLayout
            Spacing="25"
            Padding="10">
            <toolkit:AvatarView 
                Text="ZS" 
                Padding="5"
                BackgroundColor="Gray"/>
            <Label  TextColor ="White" >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Good morning,"/>
                        <Span Text="Bety!" FontAttributes="Bold" FontSize="Large"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </HorizontalStackLayout>
        
    </Shell.TitleView>
    <Grid>
        <BoxView Color="{StaticResource Primary}"
                 HeightRequest="50"
                 VerticalOptions="Start"/>
        
        <Grid RowDefinitions="auto">
            <ScrollView Padding="0,20,0,0">
                <Frame BackgroundColor="{StaticResource White}" CornerRadius="10" Margin="30,0,30,0">

                    <Grid ColumnDefinitions="3,*, 20"
                          RowDefinitions="30,30,10,1,auto"
                          ColumnSpacing="15"
                          RowSpacing="0">
                        <BoxView BackgroundColor="{StaticResource Primary}"
                                 Grid.Column="0"
                                 Grid.RowSpan="2"/>
                        <Label Text="Saldo geral" 
                               Grid.Column="1"
                               Grid.Row="0"/>
                        <Label Text="R$ 4.500,00" 
                               FontAttributes="Bold"
                               Grid.Column="1"
                               Grid.Row="1"/>
                        <ImageButton Source="ic_logo.svg"
                                     Grid.Column="2"
                                     Grid.Row="0"
                                     Grid.RowSpan="2"/>
                        <BoxView BackgroundColor="LightGray"                                 
                                 Grid.Column="0"
                                 Grid.Row="3"
                                 Grid.ColumnSpan="3"/>
                        <Label Text="Meus saldos" 
                               Margin="0,20,0,0"
                               FontAttributes="Bold"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Grid.Row="4"/>
                    </Grid>

                </Frame>
            </ScrollView>


        </Grid>
    </Grid>
   
   
</ContentPage>
